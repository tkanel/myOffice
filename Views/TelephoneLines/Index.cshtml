@model PaginatedList<myITOffice.Models.TelephoneLine>

@{
    ViewData["Title"] = "Index";
}


<form asp-action="Index" method="get">


    <div class="container-fluid form-actions no-color">
        <div class="row">

            <div class="col text-left">

                <h4>Telephone lines list</h4>
                <h6><i>Total records :<b>@ViewBag.countRecords</b> </i></h6>
            </div>



            <div class="col">

                <a class="btn btn-info btn-sm" asp-action="Create">Create New</a>

            </div>



            <div class="col text-right">

                Find by Number ,SIM or Shortcut : <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
                <input type="submit" value="Search" class="btn btn-info btn-sm" /> |
                <a asp-action="Index">Back to Full List</a>


            </div>




        </div>



    </div>

</form>


<table class="table table-striped table-bordered table-sm table-hover">
    <thead class="table-dark">
        <tr>

            <th>

                <a asp-action="Index" asp-route-sortOrder="@ViewData["NumberSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.Label("Number")</a>
            </th>

            <th>

                <a asp-action="Index" asp-route-sortOrder="@ViewData["SimSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.Label("SIM"))</a>
            </th>

            <th>
                @Html.Label("PIN1")
            </th>
            <th>
                @Html.Label("PIN2")
            </th>
            <th>
                @Html.Label("PUK1")
            </th>
            <th>
                @Html.Label("PUK2")
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ShortCutSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.Label("Shortcut")</a>
            </th>
            <th>
                @Html.Label("NOTES")
            </th>
            <th>
                @Html.Label("Line Type")
            </th>

            <th>
                @Html.Label("Start Date")
            </th>
            <th>
                @Html.Label("Expiration Date")
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SIM)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.PIN1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PIN2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PUK1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PUK2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Shortcut)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LineType.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateStart)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateExpired)
                </td>


                <td>
                    <partial name="_tablebuttons" model="item" />
                </td>
            </tr>
        }
    </tbody>
</table>

@*PAGINATION*@

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-info btn-sm @prevDisabled">
    <span><<</span>Previous
</a>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-info btn-sm @nextDisabled">
    Next <span>>></span>
</a>

