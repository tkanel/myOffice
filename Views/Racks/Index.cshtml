@model IEnumerable<myITOffice.Models.Rack>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid form-actions no-color">
    <div class="row">

        <div class="col text-left">

            <h4>Racks list</h4>

        </div>



        <div class="col">

            <a class="btn btn-info btn-sm" asp-action="Create">Create New</a>

        </div>

        




    </div>



</div>
<table class="table table-striped table-bordered table-sm table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssetNr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PortsNr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AssetNr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PortsNr)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    <partial name="_tablebuttons" model="item" />
                </td>
            </tr>
        }
    </tbody>
</table>
