@model myITOffice.Models.Project

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>
    <h4>Project details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Hardware)
        </dt>
        <dd class="col-sm-10">
            @Html.TextAreaFor(model => model.Hardware, new { @class = "form-control", @rows = 6 })
        </dd>
        <dt class="col-sm-2">
            @Html.TextAreaFor(model => model.Software, new { @class = "form-control", @rows = 6 })
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Software)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
