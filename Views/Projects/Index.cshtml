@model IEnumerable<myITOffice.Models.Project>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <form asp-action="Index" method="get">


        <div class="container-fluid form-actions no-color">
            <div class="row">

                <div class="col text-left">

                    <h4>Projects list</h4>

                </div>

                <div class="col">

                    <a class="btn btn-info btn-sm" asp-action="Create">Create New</a>

                </div>

               

            </div>



        </div>

    </form>

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Hardware)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Software)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Notes)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.Raw(item.Hardware)
                            @*@Html.TextAreaFor(model => item.Hardware, new { @class = "form-control", @rows = 6 })*@

                        </td>
                        <td>
                            @Html.Raw(item.Software)
                            @*@Html.TextAreaFor(modelItem => item.Software, new { @class = "form-control", @rows = 6 })*@
                        </td>
                        <td>
                            @Html.Raw(item.Notes)
                        </td>
                        <td>
                            <a class="btn btn-sm btn-secondary button-intable" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-sm btn-secondary button-intable" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a class="btn btn-sm btn-danger button-intable" asp-action="Delete" asp-route-id="@item.Id">Delete</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
