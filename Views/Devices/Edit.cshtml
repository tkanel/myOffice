            </div>
            <div class="form-group">
                <select asp-for="DeviceTypeId" asp-items="ViewBag.DeviceType" size="1" class="form-control">
                    <option value="">Select a device type</option>
                </select>

            </div>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IPAddress1" class="control-label"></label>
                <input asp-for="IPAddress1" class="form-control" />
